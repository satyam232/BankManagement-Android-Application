<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferAmount"
    android:background="@color/golden">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="343dp"
        android:background="@drawable/transferammount"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="Transfer Amount"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/acno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/round"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:paddingLeft="10dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@drawable/accountno"
            android:ems="10"
            android:hint="Enter the Account no "
            android:inputType="number"
             />

        <EditText
            android:id="@+id/amttransfer"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:ems="10"
            android:background="@drawable/round"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:hint="Enter the Amount to transfer"
            android:inputType="number"
             />

        <EditText
            android:id="@+id/yourpswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@drawable/baseline_key_24"
            android:ems="10"
            android:background="@drawable/round"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:hint="Your password"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/golden"
            android:background="@drawable/round"
            android:layout_marginTop="40px"
            android:layout_marginRight="12dp"
            android:text="Transfer"
            android:textAllCaps="false" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/p1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>